{
    "name": "pitch/symfony-adr",
    "description": "This bundle makes it easier to follow ADR pattern while writing a Symfony application",
    "keywords": ["ADR", "Action-Domain-Responder", "Symfony"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Fritsche",
            "email": "ph.fritsche@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pitch\\AdrBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pitch\\AdrBundle\\": "test/"
        }
    },
    "require": {
        "php": ">=7.4",
        "symfony/config": "^5",
        "symfony/http-kernel": "^5",
        "composer/composer": "^1.10"
    },
    "require-dev": {
        "phpunit/phpcov": "^7",
        "phpunit/phpunit": "^9",
        "sensio/framework-extra-bundle": "^5.5",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/yaml": "^5",
        "mikey179/vfsstream": "^1.6"
    },
    "suggest": {
        "sensio/framework-extra-bundle": "^5.5"
    },
    "scripts": {
        "lint": "phpcs --standard=ruleset.xml src test",
        "lint-fix" : "phpcbf --standard=ruleset.xml src test",
        "test": [
            "@test-unit",
            "@testcov"
        ],
        "test-unit": "phpunit --coverage-php coverage/unit.cov",
        "test-s": "phpunit --stop-on-failure",
        "testcov": "phpcov merge --text --html=coverage -- coverage"
    }
}
